@model WebApplication1.Models.Workout

@{
    ViewData["Title"] = "Workout Details";
}

<h1 class="text-primary">Workout Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h4>@Model.Type</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.Duration minutes</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Calories Burned</dt>
            <dd class="col-sm-9">@Model.CaloriesBurned</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Workout</a>
    <a asp-action="AllWorkouts" asp-controller="Dashboard" class="btn btn-secondary">Back to Workouts</a>
</div>
