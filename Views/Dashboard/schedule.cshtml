@model WebApplication1.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<h1 class="text-secondary">Schedule Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-secondary text-white">
        <h4>@Model.Activity</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Activity</dt>
            <dd class="col-sm-9">@Model.Activity</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.Duration minutes</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Schedule</a>
    <a asp-action="AllSchedule" asp-controller="Dashboard" class="btn btn-secondary">Back to Schedule</a>
</div>
