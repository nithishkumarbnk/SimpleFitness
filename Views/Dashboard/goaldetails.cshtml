@model WebApplication1.Models.Goal

@{
    ViewData["Title"] = "Goal Details";
}

<h1 class="text-info">Goal Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-info text-white">
        <h4>@Model.Description</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Completion Status</dt>     
            <dd class="col-sm-9">@Model.IsCompleted ? "Completed" : "In Progress"</dd>

            <dt class="col-sm-3">Target Date</dt>
            <dd class="col-sm-9">@Model.TargetDate.ToString("MMMM dd, yyyy")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Goal</a>
    <a asp-action="AllGoals" asp-controller="Dashboard" class="btn btn-secondary">Back to Goals</a>
</div>
