@model WebApplication1.Models.User

<div class="profile-details card shadow-sm p-4 mt-4 mb-4 bg-light border-0">
    <div class="text-center">
        @* Display profile image if it exists *@
        @if (Model.ImageData != null && Model.ImageData.Length > 0)
        {
            var base64Image = Convert.ToBase64String(Model.ImageData);
            <img src="data:image/jpeg;base64,@base64Image" alt="Profile Image" class="img-fluid rounded-circle border" style="width: 150px; height: 150px; object-fit: cover;" />
        }
        else
        {
            <div class="no-image-placeholder rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                <i class="fa-solid fa-user text-white" style="font-size: 48px;"></i>
            </div>
        }
        <h2 class="mt-3">@Model.Name</h2>
    </div>

    <div class="profile-info mt-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>ID:</strong>
                <span>@Model.Id</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Email:</strong>
                <span>@Model.Email</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Gender:</strong>
                <span>@Model.Gender</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Age:</strong>
                <span>@Model.Age</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Height:</strong>
                <span>@Model.Height cm</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Weight:</strong>
                <span>@Model.Weight kg</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Password:</strong>
                <span>@Model.Password</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Role:</strong>
                <span>@Model.Role</span>
            </li>
        </ul>
    </div>
</div>

