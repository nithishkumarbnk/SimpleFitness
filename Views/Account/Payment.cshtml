@{
    ViewData["Title"] = "Choose Payment Method";
}

<div class="container text-center mt-5">
    <h2>Select a Payment Method</h2>
    <p>Choose your preferred payment platform to continue.</p>

    <div class="mt-4">
        <a asp-action="RedirectToPaytm" class="btn btn-primary btn-lg me-3" role="button">
            Pay with Paytm
        </a>

        <a asp-action="RedirectToPhonePe" class="btn btn-success btn-lg" role="button">
            Pay with PhonePe
        </a>
    </div>
</div>
